<style>
    .popup {
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.4);
        display: none;
        opacity: 0;
        transition: opacity 0.2s ease-in-out;
    }

    .popup-content {
        position: relative;
        background-color: white;
        margin: 10% auto;
        padding: 20px;
        border: 1px solid #888888;
        width: 30%;
        font-weight: bolder;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: transform 0.2s ease-in-out, opacity 0.2s ease-in-out;
        transform: scale(0.8);
        opacity: 0;
    }

        .popup-content.show {
            transform: scale(1);
            opacity: 1;
        }

        .popup-content button {
            display: block;
            margin: 0 auto;
        }

    .show {
        display: block;
        opacity: 1;
    }

    .popup-close {
        position: absolute;
        right: 15px;
        top: 10px;
        font-size: 28px;
        font-weight: bold;
        color: black;
        cursor: pointer;
    }

        .popup-close:hover,
        .popup-close:focus {
            color: black;
            text-decoration: none;
        }

    .scrollable-table-container {
        max-height: 300px; /* Adjust this height as needed */
        overflow-y: auto;
    }
</style>

